
package(
    default_visibility = ["//visibility:public"],
)

licenses(["notice"])


cc_library(
    name = "openssl",
    deps = select({
        "@bazel_tools//src/conditions:windows" : [":openssl_win"],
        "//conditions:default" : [":openssl_linux"],
    }),
)

cc_library(
    name = "openssl_linx",
    deps = ["crypto_linux", "libssl_linux"],
)

cc_import(
    name = "crypto_linux",
    shared_library = "lib/libcrypto.so",
)

cc_import(
    name = "libssl_linux",
    shared_library = "lib/libssl.so",
)

cc_import(
    name = "openssl_win",
    interface_library = "lib/ssleay32.lib",
    shared_library = "lib/ssleay32.dll",
)

