def get_user_option(request):
    if request.method == "POST":
        form = TransformOptsForm(request.POST, request.FILES)
        if form.is_valid():
            print("form is valid")
            data = {}
            signal = handle_uploaded_file(request.FILES['file'])
            data["Signal"] = signal
            print(request.POST.keys())
            if (request.POST.get("is_notch")):
                data["Notch"] = Notch(signal)
            if (request.POST.get("is_bandpass")):
                data["Bandpass"] = Bandpass20_38(signal)
            if (request.POST.get("is_fft")):
                data["FFT"] = FFTTransform(signal)
            json_str = json.dumps(data)
            return render(request, "psg/name.html", {"form":form, "data" : data})
    form = TransformOptsForm()
    data = {}
    return render(request, "psg/name.html", {"form": form, "data":data})

def handle_uploaded_file(f):
    temp_file = tempfile.TemporaryFile()
    for chunk in f.chunks():
        temp_file.write(chunk)
    temp_file.seek(0)
    data = temp_file.read()
    data = data.decode("utf-8")
    data = data.split("\r\n")
    if (len(data[-1]) == 0): data = data[:-1]
    signal = list(map(int, data))
    temp_file.close()
    return signal
