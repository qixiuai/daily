from django.core.files.uploadedfile import SimpleUploadedFile
from django import forms


def upload_file(request):
    pass

class TransformOptsForm(forms.Form):
    file = forms.FileField(label="File", required=True)
    sample_rate = forms.IntegerField(label="SampleRate",
                                     initial=500,
                                     required=True)
    is_notch    = forms.BooleanField(label="Notch",
                                     required=False)
    is_bandpass = forms.BooleanField(label="Bandpass",
                                     required=False)
    is_fft = forms.BooleanField(label="FFT", required=False)
