
from __future__ import absolute_import
from __future__ import division
from __future__ import print_function


class Operation(object):
    """ Operation """

    def __init__(self, name, inputs, outputs):
        """ 
        name: ops name
        inputs: names of messages []
        outputs: names of messages []
        """
        self._name = name
        self._inputs  = inputs
        self._outputs = outputs

    def inputs(self):
        return self._inputs

    def outputs(self):
        return self._outputs

    @property
    def costs(self):
        """ better given by actual computing time """
        return 1

    @property
    def use_body_sharded(self):
        return False

    def use_body_gpu(self):
        return False
    
    def body_sharded(self, inputs):
        raise NotImplementedError()
    
    def body(self, inputs):
        raise NotImplementedError()

    def body_gpu(self, inputs):
        raise NotImplementedError()    





















