

#include "findpeaks.h"

class NoiseClassifier {
public:
  NoiseClassifier() {
    peak_detector = PeakDetector(100, 400, 100, 0.9, 40, 4);
  }
  int classify(float sample) {
    int peak_rate = peak_detector.run(sample);
    if (peak_rate == 120) {
      return 1;
    }
    return 0;
  }
  PeakDetector peak_detector;
};











