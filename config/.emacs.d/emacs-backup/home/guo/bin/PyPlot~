#!/home/guo/anaconda3/bin/python

import os
import argparse
import matplotlib.pyplot as plt


def plot_data(x, y):
    plt.figure(figsize=(10, 8))
    plt.grid(True);
    plt.plot(x, y)
    plt.show()

def read_data(file_path):
    with open(file_path) as file:
        data = file.read()
    data = data.split('\n')
    float_data = []
    for val in data:
        try:
            float_data.append(float(val.strip()))
        except:
            print("val is : {}\n".format(val))
#            exit(-1)
    return float_data

def main(file_path):
    data = read_data(file_path)
    t = range(len(data))
    t = list(t)
    print(data[:3])
    plot_data(t, data)

        

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description='Plot data in a file')
    parser.add_argument('file_path', type=str, default='txt',
                    help='data file path')
#    parser.add_argument('window_size', type=int, default = 6000,
#                    help='data file path')
    args = parser.parse_args()
    main(args.file_path)
