#ifndef _PSG_LIB_IO_LOAD_EDF_
#define _PSG_LIB_IO_LOAD_EDF_

#include <iostream>
#include <iomanip>
#include <string>
#include <memory>
#include <chrono>
#include <ctime>
#include <sstream>
#include <cstdlib>
#include "edflib.h"

namespace physio {
  namespace io {    
    class EdfplusReader {
    public:
      EdfplusReader() = default;
      EdfplusReader(const std::string& filepath);
      ~EdfplusReader() {edfclose_file(hdr->handle);}
      std::vector<float> load_signal(std::string signal_name);
      std::vector<std::vector<float>> get_epoch(struct tm tm_epoch);
  
      struct tm start_time;
      std::string patient;
      std::vector<int> freqs;
      std::vector<std::string> signal_names;
      std::vector<std::vector<float>> signals;
    private:
      std::vector<float> get_epoch_for_signal(std::string signal_name,
					      struct tm time_epoch);
      std::pair<int, int> calc_indexes(struct tm time_of_epoch, int freq);
      int get_signal_index(std::string signal_name);
  
      std::shared_ptr<struct edf_hdr_struct> hdr;
    };
  } // end namespace io

} // end namespace physio

#endif

