
#ifndef BURN_RESP_REPORT_H_
#define BURN_RESP_REPORT_H_

#include <map>
#include <vector>
#include "burn/common_type.h"

namespace burn {

  class RespReport {
  public:
    struct Args {
      std::vector<int> stages;
      int sleep_onset_epoch_id;
      
      std::vector<Event> oas;
      std::vector<Event> cas;
      std::vector<Event> mas;
      std::vector<Event> hyps;
      std::vector<Event> reras;
      
      Args(std::vector<int> stages,
	   int sleep_onset_epoch_id,
	   std::vector<Event> oas,
	   std::vector<Event> cas,
	   std::vector<Event> mas,
	   std::vector<Event> hyps,
	   std::vector<Event> reras) {
	this->stages = stages;
	this->sleep_onset_epoch_id = sleep_onset_epoch_id;
	this->oas = oas;
	this->cas = cas;
	this->mas = mas;
	this->hyps = hyps;
	this->reras = reras;
      }
    };

    struct RespEpochs {
      std::vector<float> oas;
      std::vector<float> cas;
      std::vector<float> mas;
      std::vector<float> hyps;
    };
    
    struct Rets {
      std::map<std::string, float> table;
      RespEpochs resp_epochs;
    };

    RespReport(Rets* rets, const Args* args): args_{args}, rets_{rets} {}
    void Run();

  private:
    const Args* args_;
    Rets* rets_;
  };

  



}








#endif
