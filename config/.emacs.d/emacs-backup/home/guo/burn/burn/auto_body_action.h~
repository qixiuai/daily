
#ifndef BURN_LEG_H_
#define BURN_LEG_H_

#include <vector>
#include "burn/common_type.h"

namespace burn {

  class AutoLeg {
  public:
    struct Args {
      std::vector<float> leg_r;
      std::vector<float> leg_l;
      Args(std::vector<float> leg_r,
	   std::vector<float> leg_l) {
	this->leg_r = leg_r;
	this->leg_l = leg_l;
      }
    };

    struct Rets {
      std::vector<Event> plms;      
    };
    
    AutoLeg(Rets* rets, const Args* args) {
      this->args_ = args;
      this->rets_ = rets;
    }

    void Run();
    
  private:
    const Args* args_;
    Rets* rets_;
  };


}


#endif
