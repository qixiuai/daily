
#ifndef BURN_LEG_REPORT_H_
#define BURN_LEG_REPORT_H_

#include <map>
#include <vector>

#include "burn/common_type.h"

namespace burn {

  class LegReport {
  public:
    struct Args {
      std::vector<int> stages;
      std::vector<Event> plms;
      int sleep_onset_epoch_id;
      Args(std::vector<int> stages,
	   std::vector<Event> plms,
	   int sleep_onset_epoch_id) {
	this->stages = stages;
	this->plms = plms;
	this->sleep_onset_epoch_id = sleep_onset_epoch_id;
      }
    };
    
    struct Rets {
      std::map<std::string, float> table;
      std::string chart_plms;
    };

    LegReport(Rets* rets, const Args* args): args_{args}, rets_{rets} {}
    void Run();

  private:
    const Args* args_;
    Rets* rets_;
  };



}






#endif
