
import time
import zmq


def say_hello():
    context = zmq.Context()
    socket  = context.socket(zmq.REP)
    socket.bind("tcp://*:5555")
    while True:
        message = socket.recv()
        print("Received request: %s" % message)
        time.sleep(1)
        socket.send(b"World")
    
def main():
    pass

if __name__ == "__main__":
    main()
