
#include <iostream>
#include <iterator>
#include <algorithm>
#include <boost/circular_buffer.hpp>


int main()
{
  typedef typename boost::circular_buffer<int> Buf;
  Buf buf(3);
  buf.push_back(1);
  buf.push_back(2);  
  buf.push_back(3);

  Buf bufB(3);
  buf.push_back(3);
  buf.push_back(2);  
  buf.push_back(1);  

  Buf bufC = bufB - buf;
  
  for_each(buf.begin(), buf.end(), [](int x) {
      std::cout << x << '\t';
    });
  std::cout << std::endl;
  return 0;
}
