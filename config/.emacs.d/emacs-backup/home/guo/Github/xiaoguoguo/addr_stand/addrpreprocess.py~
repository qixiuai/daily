def deal_with_lv99(addrs):
    '''
    将地址被切分后的第99级地址块（前一级不为10）中的
    （1）'**-**-**'转化为'**幢**单元**室'
    （2）'**-**'转化为'**单元**室'

    '''
    for addr in addrs:
        if addr[-1][1] == 99 and addr[-2][1] != 10:
            addr[-1][0] = addr[-1][0].split('-')
            if len(addr[-1][0]) == 1:
                pass
#               print('+++++++++%s' %addr[-1])               
            if len(addr[-1][0]) == 2:
                a = addr[-1][0][0] + '单元'
                b = addr[-1][0][1] + '室'
                del addr[-1]
                addr.append([a,8,2])
                addr.append([b,10,1])
                
            if len(addr[-1][0]) == 3:
                a = addr[-1][0][0] + '幢'
#                print('a = %s' %a)
                b = addr[-1][0][1] + '单元'
                c = addr[-1][0][2] + '室'
                del addr[-1]
                addr.append([a,7,1])
                addr.append([b,8,2])
                addr.append([c,10,1])
#    return(addrs)
'''
为什么del addr,addrs不变而del addr[-1],则addrs就变了呢

'''


def data_clean_with_no(addrs):
    '''
    将最大切分级别小于10的地址删除
    
    Args: 
        addrs: 被所有级别切分后的所有地址
    
    Returns:
        generate_addr: 剩下的地址组成的列表
        temp: 不是以'浙江省'开头的地址组成的列表
        delete: 被删除的最大级别小于10的地址组成的列表
    '''
    delete = []
    final_addrs = []
    for addr in addrs:
        delete_equal = delete_no_lv_equal(addrs, LV_EQUAL)
        delete_less = delete_lv_less(addrs, LV_LESS)
        delete = delete_equal + delete_less
        final_addrs = [item for item in addrs if item not in delete]
    return(final_addrs, delete)
    

def delete_no_lv_equal(addrs, lv):
    delete = []
    for addr in addrs:
        rm_mark = True
        for item in addr[1:]:
#            print(item)
#            print(item[1])
            status = float(item[1]) - lv
            if status >= 0 and status < 1 :
                rm_mark = False
                break
        if rm_mark == True:
            delete.append(addr)
    return(delete)
#           addrs.remove(addr）   
#        if addr[1][1] != 1:
#            print(addr)
#            temp.append(addr)
#            rm_mark = True
#        print('addr1=%s' %addr)  
def delete_lv_less(addrs, lv):
    delete = []
    for addr in addrs:
        rm_mark = False
        if addr[-1][1] < lv:
            rm_mark = True
        if rm_mark == True:
            delete.append(addr)
    return(delete)
        
