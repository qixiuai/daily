
#include <vector>
#include <string>
#include <iostream>
#include <fstream>
namespace physio {
  template <class T>
    vector<T> load_signal(std::string file_path) {
    std::fstream in(file_path);
    if (!in.is_open()) {
      std::cout << file_path << " is not found\n";
    }
    std::vector<T> signal;
    std::string line;
    while (getline(in, line)) {
      T val = std::stod(line);
      signal.push_back(val);
    }
    return signal;
  }
} // end namespace Physio
