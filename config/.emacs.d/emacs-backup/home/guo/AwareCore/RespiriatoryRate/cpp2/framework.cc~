#include <iostream>
#include <fstream>
#include <vector>
#include <string>

#include "findpeaks.h"
#include "filter.h"
#include "framewwork.h"

int Framework::run(int value) {
  value  = this->medfilter.realtime_filter(value);
  value  = this->lowpass.realtime_filter(value);
  int resp_rate = this->resp_detector.run(value);
  return  resp_rate;
}


