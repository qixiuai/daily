# grpc for comm between alg and other servers

CXX = g++
CPPFLAGS = `pkg-config --cflags protobuf grpc`
CXXFLAGS = -std=c++17
LDFLAGS += -L/usr/local/lib `pkg-config --libs protobuf grpc++`\
	-Wl,--no-as-needed -lgrpc++_reflection -Wl,--as-needed\
	-ldl

PROTOC = protoc
GRPC_CPP_PLUGIN = grpc_cpp_plugin
GRPC_CPP_PLUGIN_PATH ?= `which $(GRPC_CPP_PLUGIN)`

PROTOS_PATH = ../protos

vpath %.proto $(PROTOS_PATH)

all: alg_signal_client alg_server

alg_signal_client: Signals.pb.o Signals.grpc.pb.o alg_signal_client.o
	$(CXX) $^ $(LDFLAGS) -o $@ -g

alg_server: BCGAlg.pb.o  BCGAlg.grpc.pb.o alg_server.o
	$(CXX) $^ $(LDFLAGS) -o $@

%.grpc.pb.cc: %.proto
	$(PROTOC) -I $(PROTOS_PATH) --grpc_out=. --plugin=protoc-gen-grpc=$(GRPC_CPP_PLUGIN_PATH) $<

%.pb.cc: %.proto
	$(PROTOC) -I $(PROTOS_PATH) --cpp_out=. $<

clean:
	rm -f *.o *.pb.cc *.pb.h alg_signal_client alg_server
