

#ifdef __cplusplus
extern "C" {
#endif

  struct BCGResult {
    bool  is_on_bed;    
    int   quality_level;
    int   heart_rate;
    int   heart_offset;
    int   respiratory_rate;
    int   respiratory_offset;
  };
  
  typedef struct BCGFramework BCGFramework;
  
  BCGFramework * BCGFramework_Init(int Fz);

  BCGResult BCGFramework_Run(BCGFramework* bcg, int val);

  void BCGFramework_End(BCGFramework * bcg);

  
#ifdef __cplusplus
}
#endif
