CXX = g++
CXXFLAGS = -Wall -g -std=c++17

run : Run.cc
	g++ $< -lbcg -L. -o $@

main: main.c
	gcc $< -lbcgc -lbcg -L. -o $@

libbcgc.so : libbcg.so BCGWrapper.c BCGWrapper.h
	g++ $< -fpic -shared -lbcg -L. -I. $< -o $@

libbcg.so : BCG.cc BCG.h
	g++ $< $(CXXFLAGS) -fpic -shared -o $@

clean:
	rm -f *.so 
