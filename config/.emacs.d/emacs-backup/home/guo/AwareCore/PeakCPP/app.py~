import dash_html_components as html
from dash.dependencies import Input, Output, State, Event
import plotly.plotly as py
from plotly.graph_objs import *
from scipy.stats import rayleigh
from flask import Flask
import numpy as np
import pandas as pd
import os
import sqlite3
import datetime as dt
import pdb

app = dash.Dash('PhysioInsight-App')
server = app.server

app.layout = html.Div([
    html.Div([
        html.H2(html.Center("PhysioInsignt")),
    ], className='banner'),
    html.Div([
        html.Div([
            html.H3("BCG Signal")
        ], className='Title'),
        html.Div([
            dcc.Graph(id='wind-speed'),
        ], className='twelve columns wind-speed'),
        dcc.Interval(id='wind-speed-update', interval=1000, n_intervals=0),
    ], className='row wind-speed-row'),
])#, style={'padding': '0px 10px 15px 10px',
#    'marginLeft': 'auto', 'marginRight': 'auto', "width": "900px",
#    'boxShadow': '0px 0px 5px 5px rgba(204,204,204,0.4)'})


POS = 0
signal = []
signal_length = 5000

def update_signal():
    global POS
    global signal
    global signal_length
    file = open("tcp_parsed_data_test.txt")
    file.seek(POS)
#    nbytes = 1000*5
    txts = file.read()
    nbytes = len(txts)
    print("Load {} points".format(nbytes/5))
    POS += nbytes
    val_strs = txts.strip().split('\n')
    for val_str in val_strs:
        try:
            signal.append(int(val_str))
        except:
            print("found empty str: {}".format(val_str))
    file.close()
    if len(signal) > signal_length:
        signal = signal[-signal_length:]


@app.callback(Output('wind-speed', 'figure'), [Input('wind-speed-update', 'n_intervals')])
def gen_wind_speed(interval):
    update_signal()
    global signal
    global signal_length

    trace = Scatter(
        y=signal,
        line=Line(
            color='#42C4F7'
        ),
        hoverinfo='skip',
        mode='lines',
    )

    layout = Layout(
        height=750,
        width=1800,
        xaxis=dict(
            range=[0, signal_length],
            showgrid=True,
            showline=False,
            zeroline=False,
            fixedrange=True,
#            tickvals=[0, 50, 100, 150, 200],
#            ticktext=['200', '150', '100', '50', '0'],
            title='Time Elapsed (sec)'
        ),
        yaxis=dict(
            range=[min(signal), max(signal)],
            showline=False,
            fixedrange=True,
            zeroline=False,
#            nticks=max(6, round(max(signal)/10))
        ),
        margin=Margin(
            t=45,
            l=50,
            r=50
        )
    )

    return Figure(data=[trace], layout=layout)


external_css = ["https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css",
                "https://cdn.rawgit.com/plotly/dash-app-stylesheets/737dc4ab11f7a1a8d6b5645d26f69133d97062ae/dash-wind-streaming.css",
                "https://fonts.googleapis.com/css?family=Raleway:400,400i,700,700i",
                "https://fonts.googleapis.com/css?family=Product+Sans:400,400i,700,700i"]

for css in external_css:
    app.css.append_css({"external_url": css})

if 'DYNO' in os.environ:
    app.scripts.append_script({
        'external_url': 'https://cdn.rawgit.com/chriddyp/ca0d8f02a1659981a0ea7f013a378bbd/raw/e79f3f789517deec58f41251f7dbb6bee72c44ab/plotly_ga.js'
    })

if __name__ == '__main__':
    app.run_server()
