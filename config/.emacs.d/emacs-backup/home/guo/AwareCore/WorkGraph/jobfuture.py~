from __future__ import print_function, division

from graphviz import Digraph

dot = Digraph(comment="The Round Table", format='svg')
#node_attr={'shape':'plaintext'}
print(dot)

dot.node('A', 'Job Duties')
dot.node('B', 'BCG')
dot.node('C', 'PSG')

# add edges
dot.edges(['AB', 'AC'])

#
dot.node('D', 'PhysioInsight')
dot.node('E', 'PhysioVisual')
dot.edges(['BD', 'CE'])

#BCG Alg
dot.node('F', 'first version')
dot.node('G', 'second version')
dot.edges(['BF', 'BG'])

dot.node('H', 'first approach')
dot.node('I', 'second approach')
dot.edges(['GH', 'GI'])
dot.node('J', 'findpeaks')
dot.node('K', 'autoencoder')
dot.edges(['IJ', 'IK'])

# PSG
dot.node('L', 'sleep stage')
dot.node('M', 'other algorithms support')
dot.edges(['CL', 'CM'])

dot.graph_attr['rankdir'] = 'LR'
#dot.edge_attr.update(arrowhead='vee', arrowsize='2')

dot.render('output/duty', view=True)

