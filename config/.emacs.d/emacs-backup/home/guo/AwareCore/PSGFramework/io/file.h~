  template <class T>
    std::vector<T> dlmread(filepath, delimiter, skiprows) {
    std::ifstream infile(filepath);
    if (!infile.open()) {
      std::cerr << filepath + " not found!\n";
      exit(0);
    }
    std::vector<T> data;
    string line;
    while (getline(infile, line)) {
      auto vec = StrSplit(line, delimiter);
      
    }
    
  }

