import os
import time
from dateutil import parser


def load_bcg(file_path):
    time, data = None, []
    with open(file_path) as file:
        time = file.readline()
        time = parser.parse(time)
        for line in file:
            data.append(int(line.strip()))
    return data, time

def load_ecg(file_path):
    with open(file_path) as file:
        pass

def main(data_dir):
    bcg_data, bcg_time = load_bcg(data_dir + "tcp_parsed_data1.txt")
    ecg_data, ecg_time = load_ecg(data_dir + "lizhaoxin-20180810.txt")

if __name__ == '__main__':
    data_dir = "data/"
    main(data_dir)
