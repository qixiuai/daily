import os
import socket

from parser import Parser


def startTCPServer():
    __socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM);
    __socket.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDER, 1);
    __connection, __address = __socket.accept();
    try:
        while (True):
            __buf = __connection.recv(1460);
            print(__buf);
    except:
        __connection.close();
        __socket.close();
        exit(0);

